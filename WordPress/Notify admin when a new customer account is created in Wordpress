

<?php
/**
 * Notify admin when a new customer account is created in Wordpress
 * Author: Yaser Alhosani
 */
 // Start code
function woocommerce_created_customer_admin_notification( $customer_id ) {
    wp_send_new_user_notifications( $customer_id, 'admin' );
}
add_action( 'woocommerce_created_customer', 'woocommerce_created_customer_admin_notification', 10, 1);
// End code
?>
